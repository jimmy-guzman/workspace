{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "ignoreChanges": ["*.md", "*.test.*"]
    },
    "publish": {
      "conventionalCommits": true,
      "npmClient": "npm",
      "yes": true,
      "ignoreChanges": ["*.md", "*.test.*"]
    }
  }
}
